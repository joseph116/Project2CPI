<resources>

    <style name="Theme1" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="windowActionModeOverlay">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="backgroundColor">@drawable/ic_gradient_background</item>
        <item name="backgroundFolder">@drawable/rounded_corner_add</item>
        <item name="backgroundText">@drawable/rounded_corner_background</item>
        <item name="buttonStyle">@drawable/button_style</item>
        <item name="fontFamily">@font/opensans</item>
    </style>

    <style name="Theme2" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="windowActionModeOverlay">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="colorPrimary">@color/colorPrimaryOld</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkOld</item>
        <item name="colorAccent">@color/colorAccentOld</item>
        <item name="backgroundColor">@color/textOnDark</item>
        <item name="backgroundFolder">@drawable/folder_background</item>
        <item name="backgroundText">@drawable/folder_background</item>
        <item name="buttonStyle">@drawable/button_style</item>
        <item name="fontFamily">@font/opensans</item>
    </style>


    <style name="folder_name">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:background">?attr/backgroundText</item>
        <item name="android:padding">5dp</item>
        <item name="android:textSize">18sp</item>
        <item name="fontFamily">@font/opensans</item>
    </style>

</resources>
