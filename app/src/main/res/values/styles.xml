<resources>

    <style name="Theme1" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="windowActionModeOverlay">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorOnPrimary">@color/colorPrimaryDark</item>
        <item name="android:windowBackground">@color/darkBg</item>
        <item name="buttonStyle">@drawable/button_style</item>
        <item name="fontFamily">@font/opensans</item>
    </style>
    <!-- Toolbar icon  -->
    <style name="ToolbarColoredBackArrow">
        <item name="android:textColorSecondary">@color/colorPrimary</item>
    </style>

    <style name="Theme2" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="windowActionModeOverlay">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="colorPrimary">@color/colorPrimaryOld</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkOld</item>
        <item name="colorAccent">@color/colorAccentOld</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:windowBackground">@color/textOnDark</item>
        <item name="buttonStyle">@drawable/button_style</item>
        <item name="fontFamily">@font/opensans</item>
    </style>


</resources>
