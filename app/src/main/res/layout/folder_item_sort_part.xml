<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <ImageButton
        android:id="@+id/insert_button"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:padding="5dp"
        android:scaleType="centerCrop"
        android:layout_marginEnd="8dp"
        android:backgroundTint="?attr/colorAccent"
        android:background="@drawable/rounded_corner_add"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_insert" />

    <TextView
        android:id="@+id/folder_name_sort_part"
        android:layout_width="80dp"
        android:elevation="2dp"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_corner_background"
        android:paddingStart="2dp"
        android:layout_marginTop="8dp"
        android:paddingTop="16dp"
        android:paddingEnd="2dp"
        android:paddingBottom="16dp"
        android:textAlignment="center"
        android:text="Folder name"
        android:textSize="13dp"
        android:textColor="@color/textOnDark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/insert_button"
        app:layout_constraintStart_toStartOf="@+id/insert_button"
        app:layout_constraintTop_toBottomOf="@+id/insert_button" />
</androidx.constraintlayout.widget.ConstraintLayout>